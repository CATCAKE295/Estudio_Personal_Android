<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_img_superhero"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txt_SuperName"
        android:text="Black_Swordman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/iv_img_superhero"/>

    <TextView
        android:id="@+id/txt_RealName"
        android:text="Guts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/txt_SuperName"
        app:layout_constraintStart_toEndOf="@id/iv_img_superhero"/>

    <TextView
        android:id="@+id/txt_Publisher"
        android:text="manga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/txt_RealName"
        app:layout_constraintStart_toEndOf="@id/iv_img_superhero"/>


</androidx.constraintlayout.widget.ConstraintLayout>